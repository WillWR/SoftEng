<Page x:Class="NBMFS.DisplayAll"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NBMFS"
      mc:Ignorable="d"
      Title="displayAll" Background="White" Height="750" Width="1000">

    <Grid Margin="0,0,0,10">
        <ListView x:Name="messageView" HorizontalAlignment="Left" Height="558" Margin="119,58,0,0" VerticalAlignment="Top" Width="757">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="back" Content="Back" HorizontalAlignment="Left" Margin="119,621,0,0" VerticalAlignment="Top" Width="150" Height="45" FontWeight="Bold" Click="back_Click"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Napier Bank Message Filtration System" VerticalAlignment="Top" Height="24" Width="1000" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock x:Name="Title" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Display All Messages" Height="24" Width="980" FontWeight="Bold" TextAlignment="Center" Margin="10,29,0,697"/>
    </Grid>
</Page>
