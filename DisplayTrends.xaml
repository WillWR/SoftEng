        </ListView>
        <ListView x:Name="mentionsView" Margin="264,68,276,132">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="trendsLbl" Content="Trending Hashtags" HorizontalAlignment="Left" Height="37" Margin="80,26,0,0" VerticalAlignment="Top" Width="162" FontWeight="Bold"/>
        <Label x:Name="mentionsLbl" Content="Mentions" HorizontalAlignment="Left" Height="37" Margin="264,26,0,0" VerticalAlignment="Top" Width="160" FontWeight="Bold"/>

    </Grid>
</Page>
